
<% content_for :head do %>
<%= stylesheet_link_tag 'cloud_user.css.scss' -%>
<% end %>

</br></br>
<div class="form-signin">

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <h2 class="form-signing-heading">Sign up</h2>
  
  <div><%= f.email_field :email, :autofocus => true, :class => "input-block-level",  :placeholder => "Email address" %></div>

  <div><%= f.text_field :username, :class => "input-block-level",  :placeholder => "Username" %></div>
  
  <div><%= f.password_field :password, :class => "input-block-level",  :placeholder => "Password" %></div>

  <div><%= f.submit "Sign up", :class => "btn btn-large btn-primary" %></div>
<% end %>

</div>


