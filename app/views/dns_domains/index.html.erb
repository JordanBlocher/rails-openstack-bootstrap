<h1>Listing dns_domains</h1>

<table>
  <tr>
    <th>Domain</th>
    <th>Created at</th>
    <th>Updated at</th>
    <th>Deleted at</th>
    <th>Deleted</th>
    <th>Scope</th>
    <th>Availability zone</th>
    <th>Project</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @dns_domains.each do |dns_domain| %>
  <tr>
    <td><%= dns_domain.domain %></td>
    <td><%= dns_domain.created_at %></td>
    <td><%= dns_domain.updated_at %></td>
    <td><%= dns_domain.deleted_at %></td>
    <td><%= dns_domain.deleted %></td>
    <td><%= dns_domain.scope %></td>
    <td><%= dns_domain.availability_zone %></td>
    <td><%= dns_domain.project_id %></td>
    <td><%= link_to 'Show', dns_domain %></td>
    <td><%= link_to 'Edit', edit_dns_domain_path(dns_domain) %></td>
    <td><%= link_to 'Destroy', dns_domain, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

