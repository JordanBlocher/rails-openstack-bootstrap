
<% if !cloud_user_signed_in? && devise_mapping.recoverable? && controller_name != 'passwords' %>
  <%= link_to "Sign Up", new_registration_path(resource_name) %> <br/>
  <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
<% end %>

<% if cloud_user_signed_in? %>
  <%= link_to('Logout', destroy_cloud_user_session_path, :method => :delete) %>        
<% end %>
