<% content_for :head do %>
<%= stylesheet_link_tag 'cloud_user.css.scss' -%>
<% end %>

</br></br>
<div class="form-signin">


<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>

  <h2 class="form-sigin-heading">Forgot your password?</h2>
  
  <div><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true %></div>

  <div><%= f.submit "Send me reset password instructions", :class => "btn btn-large btn-primary" %></div>
<% end %>

</div>
